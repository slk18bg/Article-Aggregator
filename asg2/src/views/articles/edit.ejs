<div class="flex justify-center items-center mt-20">
    <div id="card-wrapper" class="card bg-neutral shadow-xl mb-12">
        <div class="card-body">
            <h2 class="card-title text-3xl justify-center mb-6">Update Article</h2>
            <div class="join join-vertical">
                
                <form method="post" accept="/articles/<%- article?.id -%>/edit" class="w-full">

                    <input
                        type="text"
                        name="title"
                        value="<%- article?.title -%>"
                        placeholder="Article Title"
                        class="input input-bordered w-full mb-10"
                    />

                    <input
                        type="text"
                        name="url"
                        value="<%- article?.url -%>"
                        placeholder="Article URL"
                        class="input input-bordered w-full mb-10" 
                    />

                    <button
                        type="submit"
                        class="btn btn-secondary mb-6 w-full">
                            Update
                    </button>

                </form>
            </div>
        </div>
    </div>
</div>


<style>
    #card-wrapper {
        width: 500px;
    }
</style>